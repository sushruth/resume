{
	"$schema": "https://opencode.ai/config.json",
	"mcp": {
		"lucide-icons": {
			"type": "local",
			"enabled": true,
			"command": ["bunx", "lucide-icons-mcp", "--stdio"],
		},
		"mcp-advisor": {
			"type": "local",
			"enabled": true,
			"command": ["bunx", "mcp-advisor@latest"],
		},
		"context7": {
			"type": "local",
			"enabled": true,
			"command": ["bunx", "@upstash/context7-mcp"],
		},
		"vibe-check-mcp": {
			"type": "local",
			"enabled": true,
			"command": ["bunx", "@pv-bhat/vibe-check-mcp", "start", "--stdio"],
		},
		"taskmanager": {
			"type": "local",
			"enabled": true,
			"command": ["bunx", "@kazuph/mcp-taskmanager"],
		},
		"sequential-thinking": {
			"type": "local",
			"enabled": true,
			"command": ["bunx", "@modelcontextprotocol/server-sequential-thinking"],
		},
		"ESLint": {
			"type": "local",
			"enabled": true,
			"command": ["bunx", "@eslint/mcp@latest"],
		},
		"serena": {
			"type": "local",
			"enabled": true,
			"command": [
				"uvx",
				"--from",
				"git+https://github.com/oraios/serena",
				"serena",
				"start-mcp-server",
				"--context",
				"ide",
				"--project",
				".",
			],
		},
	},
}
